{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <a href="{{ path('blog_list') }}"><- Back</a>

    <div class="blog-post">

        {% if post %}

            <div class="blog-title">
                <h1>{{ post.title }}</h1>
                {{ post.date |format_datetime(locale='en') }}
                <div>
                    Author: {{ post.author.name }} ({{ post.author.email }})
                </div>
            </div>

            <div class="blog-content" style="padding: 5px 0px;">
                {{ post.content |raw }}
            </div>

            <h2>Comments ({{ post.comments_count }})</h2>

            {{ include('./comment/new.html.twig') }}

            {{ include('./comment/list.html.twig') }}

        {% else %}
            Page does not exist
        {% endif %}
    </div>

{% endblock %}